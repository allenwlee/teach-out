<div id="add_student_errors" class="errors">
</div>

<h2>Student Information</h2>

<%= form_for @student, :remote => true do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <h2>Contact Information</h2>

    <%= f.fields_for :contacts, :remote => true do |contact_field| %>
    <%= render "shared/new_contact", contact_field: contact_field %>
    <% end %>
    <br>
    <%= link_to_add_fields "Add Contact", f, :contacts %>
    <br>
  <%= f.submit "Submit", :class => "custom_submit" %>

<% end %>
