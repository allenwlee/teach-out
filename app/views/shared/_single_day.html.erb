<div id="single_day">
  <h4><%= @date%></h4>
   <ul>
    <% if @day_messages %>
        <% @day_messages.each do |m| %>  
        <li>
          <% unless m.subject.nil? || m.subject.empty? %>
            <%= link_to m.subject, message_path(m)%>
          <% else %>
            <%= link_to m.content[0,100], message_path(m)%>
          <% end %>

          <small> at <%= m.time_sent.getlocal.strftime("%l:%M %P") %></small>
          <br>
          <% m.students.uniq.each do |s| %>
            <small id="student_name"><%= s.first_name + " " + s.last_name %></small>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
