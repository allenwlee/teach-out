<div id="add_student_errors" class="errors">
  <ul>
  <% @student.errors.full_messages.each do |error|%>
    <li class="errors"><%= error %></li>
  <% end %>
</ul>
</div>

<h2>Student Information</h2>

<%= form_for @student do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <h2>Contact Information</h2>

    <%= f.fields_for :contacts do |contact_field| %>
      <%= render "shared/new_contact", contact_field: contact_field %>
      <%= contact_field.fields_for :contact_students  do |cs| %>
        <% if cs.object.student == @student %>
          <%= cs.label :active %> 
          <%= cs.radio_button :active, true%>
          <%= cs.label :inactive %> 
          <%= cs.radio_button :active, false %><br>
        <% end %>
      <% end %>
    <% end %>
    <br>
    <%= link_to_add_fields "Add Contact", f, :contacts %>
    <br>
  <%= f.submit "Submit", :class => "custom_submit" %>

<% end %>

