<div id="new_text_errors" class="errors"></div>
<div id="new_text_character_counter">160 characters left.</div>

<%= form_for @message, :remote => true do |t| %>
<div id="form_students_list">
  <ul>
  <% @students.each do |student| %>
  <li><%= check_box_tag "students[#{student.first_name}]", student.id %> <%= student.first_name %></li>
  <% end %>
  </ul>
</div>

<div class="compose" id="send_text_compose_area">
  <%= t.label :Subject %>
  <%= t.text_field :subject, :placeholder => "Optional" %>
  <%= t.label :content %><br/>
  <%= t.text_area :content, :id=> "new_text_message_content", :value => "Sent from: #{current_user.first_name} #{current_user.last_name}, #{current_user.school_name}", :rows => 10 %>

  <%= t.submit "Send it!", :class => "custom_submit" %>
</div>
<% end %>
