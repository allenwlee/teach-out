<div id="dashboard">
  <h2>Welcome, <%= @teacher.first_name %></h2>

  <div class="dashboard-buttons">
    <%= link_to "Schedule a text", schedule_new_messages_path %>
    <%= link_to "Send a Text", new_message_path %>
    <%= link_to "Add a Student", new_student_path %>
  </div>

  <div class="students-list" >
    <h4>students</h4>
    <ul>
      <% @students.each do |student| %>
      <li><%= "#{student.first_name} #{student.last_name}" %></li>
      <% end %>
    </ul>
    <br>
  </div>

  <% if @sent_messages.length != 0 %>
    <div id="last-text">
      <%= @sent_messages.last.content %>
    </div>
  <% end %>

  <% if @unsent_messages.length != 0 %>
    <div id="next-texts">
      <%= @unsent_messages.first.content %>
    </div>
  <% end %>

  <div id="calendar">
    <h3 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h3>
    <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @messages_by_date[date.to_s] %>
    <ul>
      <% @messages_by_date[date.to_s].each do |m| %>
      <li><%= link_to m.content[0,10], message_path(m)%></li>
      <% end %>
    </ul>
    <% end %>
    <% end %>
  </div>
</div>
