<div id="dashboard">
  <h2>Welcome, <%= @teacher.first_name.capitalize %></h2>

  <div class="dashboard-buttons">
    <div class="button">
      <%= image_tag "scheduletext.png" %>
      <%= link_to "Schedule text", schedule_new_messages_path %>
    </div>
    <div class="button">    
      <%= image_tag "newtext.png" %>
      <%= link_to "Send Text", new_message_path %>
    </div>
    <div class="button">
      <%= image_tag "addstudent.png" %>
      <%= link_to "Add Student", new_student_path %>
    </div>
    <div class="button">
      <%= image_tag "edit-student.png" %>
      <%= link_to "Edit Student", new_student_path %>
    </div>
  </div>

  <div class="students-list" >
    <h4>students</h4>
    <ul>
      <% @students.each do |student| %>
      <li><%= "#{student.first_name} #{student.last_name}" %></li>
      <% end %>
    </ul>
    <br>
  </div>

  <div class="text-preview">
    <div id="last-text">
      <span class="text-title"> last text </span>
      <% if @last_sent_message %>
      <span class="text-content">
        <%=  %>
        <%= @last_sent_message.content %>
      </span>
      <% end %>
    </div>

    <div id="next-text">
      <span class="text-title"> next text </span>
      <% if @last_unsent_message %>
      <span class="text-content">
        <%= @last_unsent_message.content %>
      </span>
      <% else %>
      <span class="text-content">
        You have no scheduled texts
      </span>
      <% end %>
    </div>
  </div>

  <div id="calendar">
    <h3 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h3>
    <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @messages_by_date[date.to_s] %>
    <ul>
      <% @messages_by_date[date.to_s].each do |m| %>

      <li> <%= link_to m.content[0,10], message_path(m)%> </li>

      <% end %>
    </ul>
    <% end %>
    <% end %>
  </div>
</div>
